{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["renderer/components/*"],
      "@/overlay/*": ["renderer/overlay/*"],
      "@/settings/*": ["renderer/settings/*"],
      "@/lib/*": ["renderer/lib/*"],
      "@/src/*": ["renderer/src/*"],
      "@/globals.css": ["renderer/globals.css"],
      "@shared/*": ["shared/*"],
      "@main/*": ["main/*"],
      "@preload/*": ["preload/*"],
      "@types/*": ["types/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src/main/**/*", "src/preload/**/*", "src/shared/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
